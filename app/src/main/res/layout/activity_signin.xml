<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="회원가입"
            android:textSize="20dp"
            android:textColor="#FF000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/editText_siginin_id"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:maxLines="1"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape_text_border"
                android:hint="사용할 아이디를 입력해 주세요" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_siginin_password"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape_text_border"
                android:hint="사용할 비밀번호를 입력해 주세요"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editText_siginin_nickname"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/shape_text_border"
                android:hint="사용할 닉네임을 입력해 주세요"/>
        </LinearLayout>


        <CheckedTextView
            android:id="@+id/checkedTextView_isMaster"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="점주 인가요?"
            android:textSize="20dp"
            android:checkMark="?android:listChoiceIndicatorMultiple"/>

        <Button
            android:id="@+id/button_siginin_post"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="30dp"
            android:text="회원가입"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView_signin_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>