<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="10dp"
            android:text="이런 곡은 어떠신가요?"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/shape_backgound_round">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView_recommend_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    android:src="@drawable/ic_ditto_newjeans"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView_recommend_track"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ditto_test"
                        android:textSize="30dp"
                        android:textColor="@color/gray_dark"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>
                    <TextView
                        android:id="@+id/textView_recommend_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NewJeans_test"
                        android:textSize="20sp"
                        android:textColor="@color/blue_dark"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray_dark"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="더 많은 곡 보러가기"
                    android:textSize="15sp"
                    android:textColor="@color/gray_dark"/>

                <ImageView
                    android:id="@+id/imageView_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_arrow_right_24"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout_karaoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/shape_backgound_round">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="우리 주변 노래방 찾기"
                android:textSize="20sp"
                android:textColor="@color/gray_dark"/>

            <ImageView
                android:id="@+id/imageView_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_arrow_right_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_albumList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/shape_backgound_round">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="나의 앨범 목록"
                android:textSize="20sp"
                android:textColor="@color/gray_dark"/>

            <ImageView
                android:id="@+id/imageView_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_arrow_right_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_retrofit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textView_retrofit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>
</FrameLayout>